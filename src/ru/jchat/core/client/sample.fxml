<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ListView?>
<HBox fx:controller="ru.jchat.core.client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" onMouseClicked="#clientsListClicked" stylesheets="@mystile.css">
    <VBox HBox.hgrow="ALWAYS">
        <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"/>
        <HBox fx:id="authPanel" HBox.hgrow="ALWAYS">
            <TextField fx:id="loginField" promptText="login" HBox.hgrow="ALWAYS"/>
            <PasswordField fx:id="passField" promptText="Пароль" onAction="#sendAuthMsg" HBox.hgrow="ALWAYS"/>
            <Button text="Авторизоваться" onAction="#sendAuthMsg" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox fx:id="msgPanel" visible="false" managed="false" HBox.hgrow="ALWAYS">
            <TextField fx:id="msgField" promptText="Написать сообщение" HBox.hgrow="ALWAYS" onAction="#sendMsg"/>
            <Button text="Отправить" onAction="#sendMsg"/>
        </HBox>
    </VBox>
    <ListView fx:id="clientsListView" minWidth="200" visible="false" managed="false" onMouseClicked="#clientsListClicked"/>
</HBox>